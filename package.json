{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.4.1",
  "scripts": {
    "format": "yarn format:js & yarn format:py",
    "format:js": "prettier --write .",
    "format:py": "poetry run black .",
    "db": "yarn workspace @tissai/db",
    "site": "yarn workspace @tissai/site",
    "ind": "yarn workspace @tissai/indexer",
    "pp": "yarn workspace @tissai/python-pool",
    "test": "yarn db test && yarn pp test && yarn ind test && yarn site test"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.4",
    "prettier": "3.3.3",
    "prettier-plugin-svelte": "3.2.6",
    "svelte": "4.2.19"
  }
}
